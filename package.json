{
  "name": "automanual",
  "version": "0.2.0",
  "description": "A fast and integrated component documentation tool",
  "bin": "./dist/bin.js",
  "files": [
    "dist/",
    "lib/client",
    "lib/types",
    "package.json",
    "package-lock.json",
    "readme.md",
    "LICENCE"
  ],
  "scripts": {
    "build:assembler": "tsc",
    "build:styles": "node -r esm scripts/compileStyles",
    "build": "concurrently 'npm:build:assembler' 'npm:build:styles'",
    "watch": "npx nodemon --exec 'npm run build' -e .scss,.ts,.js,.jsx --watch lib",
    "debug::serve": "serve ./sandbox/docs -s"
  },
  "esm": {
    "await": true
  },
  "author": "Flynn Buckingham",
  "license": "MPL-2.0",
  "dependencies": {
    "@mdx-js/loader": "^1.6.22",
    "@swc/core": "^1.2.40",
    "chokidar": "^3.4.3",
    "css-loader": "^3.6.0",
    "esm": "^3.2.25",
    "eventemitter3": "^4.0.7",
    "file-loader": "^6.2.0",
    "globby": "^11.0.1",
    "html-webpack-plugin": "^5.0.0-beta.1",
    "preact": "^10.5.7",
    "preact-router": "^3.2.1",
    "serialize-javascript": "^4.0.0",
    "style-loader": "^1.3.0",
    "swc-loader": "^0.1.12",
    "url-loader": "^4.1.1",
    "uuid": "^8.3.1",
    "webpack": "^5.11.1",
    "webpack-virtual-modules": "^0.4.1"
  },
  "optionalDependencies": {
    "webpack-dev-server": "^3.11.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.16",
    "@types/react": "^17.0.0",
    "concurrently": "^5.3.0",
    "prettier": "^2.2.1",
    "sass": "^1.30.0",
    "serve": "^11.3.2",
    "typescript": "^4.1.3",
    "webpack-dev-server": "^3.11.1",
    "write": "^2.0.0"
  }
}
